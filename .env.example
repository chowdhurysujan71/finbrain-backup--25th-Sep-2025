# FinBrain Environment Configuration
# Required for production deployment

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database

# Authentication
ADMIN_USER=admin
ADMIN_PASS=secure_password

# Facebook Messenger Integration
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token
FACEBOOK_VERIFY_TOKEN=your_webhook_verify_token

# Optional Configuration
SESSION_SECRET=your_session_secret_key
SENTRY_DSN=your_sentry_dsn_for_error_monitoring

# Rate Limiting (optional)
DAILY_MESSAGE_LIMIT=100
HOURLY_MESSAGE_LIMIT=20

# AI Configuration (defaults to disabled)
AI_ENABLED=false
AI_PROVIDER=none
AI_PROVIDER_URL=https://api.openai.com

# OpenAI Configuration (if using AI_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# Gemini Configuration (if using AI_PROVIDER=gemini)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-1.5-flash

# Cold-Start Mitigation
HEALTH_PING_ENABLED=true
HEALTH_PING_URL=http://localhost:5000/health

# Production Mode
ENV=production